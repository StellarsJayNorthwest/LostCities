<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap each of the cards %s has for %s" />

    <!-- First row of buttons: three wagers -->

    <Button
        android:id="@+id/wager1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Wager"/>

    <Button
        android:id="@+id/wager2"
        app:layout_constraintLeft_toRightOf="@id/wager1"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Wager"/>

    <Button
        android:id="@+id/wager3"
        app:layout_constraintLeft_toRightOf="@id/wager2"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Wager"/>

    <!-- Second row of buttons: 2, 3, 4 -->

    <Button
        android:id="@+id/card2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wager1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"/>

    <Button
        android:id="@+id/card3"
        app:layout_constraintLeft_toRightOf="@id/card2"
        app:layout_constraintTop_toBottomOf="@id/wager1"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"/>

    <Button
        android:id="@+id/card4"
        app:layout_constraintLeft_toRightOf="@id/card3"
        app:layout_constraintTop_toBottomOf="@id/wager1"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"/>

    <!-- Third row of buttons: 5, 6, 7 -->

    <Button
        android:id="@+id/card5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="5"/>

    <Button
        android:id="@+id/card6"
        app:layout_constraintLeft_toRightOf="@id/card5"
        app:layout_constraintTop_toBottomOf="@id/card3"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6"/>

    <Button
        android:id="@+id/card7"
        app:layout_constraintLeft_toRightOf="@id/card6"
        app:layout_constraintTop_toBottomOf="@id/card3"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="7"/>

    <!-- Fourth row of buttons: 8, 9, 10 -->

    <Button
        android:id="@+id/card8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="8"/>

    <Button
        android:id="@+id/card9"
        app:layout_constraintLeft_toRightOf="@id/card8"
        app:layout_constraintTop_toBottomOf="@id/card6"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="9"/>

    <Button
        android:id="@+id/card10"
        app:layout_constraintLeft_toRightOf="@id/card9"
        app:layout_constraintTop_toBottomOf="@id/card7"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="10"/>

    <TextView
        android:id="@+id/runningTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card8"
        android:text="Running total for this color here!" />

</androidx.constraintlayout.widget.ConstraintLayout>